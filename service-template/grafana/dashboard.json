{
  "annotations": { "list": [] },
  "editable": true,
  "title": "Account Service - Golden Path Dashboard",
  "uid": "account-service",
  "version": 1,
  "time": { "from": "now-1h", "to": "now" },
  "refresh": "10s",
  "panels": [
    {
      "title": "Request Rate (req/s)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "rate(http_requests_total{namespace=\"fincore\", pod=~\"account-service.*\"}[5m])",
          "legendFormat": "{{method}} {{endpoint}} ({{status}})"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": { "drawStyle": "line", "fillOpacity": 10 }
        }
      }
    },
    {
      "title": "Error Rate (%)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{namespace=\"fincore\", pod=~\"account-service.*\", status=~\"5..\"}[5m])) / sum(rate(http_requests_total{namespace=\"fincore\", pod=~\"account-service.*\"}[5m])) * 100",
          "legendFormat": "Error %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "custom": { "drawStyle": "line", "fillOpacity": 10 },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 1, "color": "yellow" },
              { "value": 5, "color": "red" }
            ]
          }
        }
      }
    },
    {
      "title": "Request Duration (p95)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{namespace=\"fincore\", pod=~\"account-service.*\"}[5m]))",
          "legendFormat": "p95 latency"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": { "drawStyle": "line", "fillOpacity": 10 }
        }
      }
    },
    {
      "title": "Pod CPU Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{namespace=\"fincore\", pod=~\"account-service.*\", container!=\"\"}[5m])",
          "legendFormat": "{{pod}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": { "drawStyle": "line", "fillOpacity": 10 }
        }
      }
    },
    {
      "title": "Pod Memory Usage",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "container_memory_working_set_bytes{namespace=\"fincore\", pod=~\"account-service.*\", container!=\"\"}",
          "legendFormat": "{{pod}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": { "drawStyle": "line", "fillOpacity": 10 }
        }
      }
    }
  ],
  "templating": { "list": [] },
  "schemaVersion": 39
}
